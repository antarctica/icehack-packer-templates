{
    "variables": {
        "ssh_username": "vagrant",
        "ssh_password": "vagrant",
        "hostname": "vagrant",
        "distro_version": "ubuntu-14.04-64",
        "distro_iso_name": "ubuntu-14.04-server-amd64.iso",
        "distro_iso_checksum": "01545fa976c8367b4f0d59169ac4866c"
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "guest_os_type": "Ubuntu_64",
            "disk_size": 40960,
            "iso_url": "http://gb.releases.ubuntu.com/trusty/{{ user `distro_iso_name` }}",
            "iso_checksum": "{{ user `distro_iso_checksum` }}",
            "iso_checksum_type": "md5",
            "http_directory": "preseed",
            "boot_wait": "5s",
            "output_directory": "{{ user `distro_version` }}-basebox-virtualbox",
            "shutdown_command": "echo 'shutdown -P now' > .shutdown.sh; echo 'vagrant'|sudo -S sh '.shutdown.sh'",
            "boot_command": [
                "<esc><esc><enter><wait>",
                "/install/vmlinuz noapic ",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `distro_version` }}-basebox.preseed.cfg ",
                "debian-installer=en_GB auto locale=en_GB kbd-chooser/method=gb ",
                "hostname={{ user `hostname` }} ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=GB ",
                "keyboard-configuration/variant=GB console-setup/ask_detect=false ",
                "initrd=/install/initrd.gz -- ",
                "<enter>"
            ],
            "ssh_username": "{{ user `ssh_username` }}",
            "ssh_password": "{{ user `ssh_password` }}"
        }
    ],
    "provisioners": [
        {
          "type": "shell",
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
          "script": "provisioning_scripts/upgrade_packages.sh"
        },
        {
          "type": "shell",
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
          "script": "provisioning_scripts/install_ansible.sh"
        },
        {
          "type": "shell",
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
          "script": "provisioning_scripts/vagrant_sudo.sh"
        },
        {
            "type": "file",
            "source": "provisioning_playbooks/files",
            "destination": "/tmp/packer-provisioner-ansible-local/"
        },
        {
          "type": "ansible-local",
          "playbook_file": "provisioning_playbooks/ubuntu-14.04-64-basebox-virtualbox.yml",
          "playbook_paths": [
            "provisioning_playbooks/tasks"
          ]
        },
        {
          "type": "shell",
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
          "script": "provisioning_scripts/uninstall_ansible.sh"
        },
        {
          "type": "shell",
          "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
          "script": "provisioning_scripts/clean_system.sh"
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "compression_level": 4,
            "override": {
                "virtualbox": {
                    "output": "vagrant_baseboxes/{{ user `distro_version` }}-basebox-virtualbox.box"
                }
            }
        }
    ]
}