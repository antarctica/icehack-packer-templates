{
  "variables": {
    "iso_url": "http://mirrors.kernel.org/centos/7.0.1406/isos/x86_64/CentOS-7.0-1406-x86_64-DVD.iso",
    "iso_checksum": "ee505335bcd4943ffc7e6e6e55e5aaa8da09710b6ceecda82a5619342f1d24d9",
    "iso_checksum_type": "sha256",
    "io_ram_size": 480,
    "hostname": "vagrant",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "distro": "centos-7.0-x86_64"
  },
  "builders": [
    {
      "type": "virtualbox-iso",

      "format": "ova",
      "vm_name": "virtualbox",
      "guest_os_type": "RedHat_64",

      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",

      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `io_ram_size`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "disk_size": 40960,
      
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      
      "http_directory": "../preseed",

      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `distro`}}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",

      "ssh_password": "{{user `ssh_username`}}",
      "ssh_port": 22,
      "ssh_username": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "10000s",

      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",

      "output_directory": "packer-{{user `distro`}}-virtualbox-iso"
    },
    {
      "type": "vmware-iso",

      "vm_name": "vmware",
      "guest_os_type": "centos-64",

      "tools_upload_flavor": "linux",
      
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{user `io_ram_size`}}",
        "numvcpus": "1"
      },
      "disk_size": 40960,

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "http_directory": "../preseed",

      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `distro`}}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",

      "ssh_password": "{{user `ssh_username`}}",
      "ssh_port": 22,
      "ssh_username": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "10000s",

      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/halt -h -p",

      "output_directory": "packer-{{user `distro`}}-vmware-iso"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "../provisioining/scripts/centos/fix-slow-dns.sh",
        "../provisioining/scripts/common/sshd.sh",
        "../provisioining/scripts/common/vagrant.sh",
        "../provisioining/scripts/common/vmtools.sh",
        "../provisioining/scripts/centos/cleanup.sh",
        "../provisioining/scripts/common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "../base-boxes/boxes/{{user `distro`}}/{{.Provider}}.box"
      "keep_input_artifact": true
    }
  ]
}

