{
  "variables": {
    "iso_url": "http://cdimage.debian.org/debian-cd/7.6.0/amd64/iso-cd/debian-7.6.0-amd64-CD-1.iso",
    "iso_checksum": "ba6f8194b5970be964a5de86522423135358908a",
    "iso_checksum_type": "sha1",
    "io_ram_size": 384,
    "hostname": "vagrant",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "distro": "debian-7.6-amd64"
  },
  "builders": [
    {
      "type": "virtualbox-iso",

      "format": "ova",
      "vm_name": "virtualbox",
      "guest_os_type": "Debian_64",

      "virtualbox_version_file": ".vbox_version",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "{{user `io_ram_size`}}" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ],
      "disk_size": 40960,

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "http_directory": "../preseed",

      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `distro`}}/preseed.cfg <wait>",
        "debian-installer=en_GB <wait>",
        "auto <wait>",
        "locale=en_GB <wait>",
        "kbd-chooser/method=gb <wait>",
        "keyboard-configuration/xkb-keymap=gb <wait>",
        "netcfg/get_hostname={{user `hostname`}} <wait>",
        "netcfg/get_domain=vm <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=gb <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",

      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -hP now",
      "output_directory": "packer-{{user `distro`}}-virtualbox-iso"
    },
    {
      "type": "vmware-iso",

      "vm_name": "vmware",
      "guest_os_type": "debian5-64",

      "tools_upload_flavor": "linux",
      
      "vmx_data": {
        "memsize": "{{user `io_ram_size`}}",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      },
      "disk_size": 40960,

      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",

      "http_directory": "../preseed",

      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `distro`}}/preseed.cfg <wait>",
        "debian-installer=en_GB <wait>",
        "auto <wait>",
        "locale=en_GB <wait>",
        "kbd-chooser/method=gb <wait>",
        "keyboard-configuration/xkb-keymap=gb <wait>",
        "netcfg/get_hostname={{user `hostname`}} <wait>",
        "netcfg/get_domain=vm <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=gb <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",

      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",

      "shutdown_command": "echo 'vagrant'|sudo -S /sbin/shutdown -hP now",

      "output_directory": "packer-{{user `distro`}}-vmware-iso"
    }
  ],
  "provisioners": [
    {
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "../provisioining/scripts/debian/update.sh",
        "../provisioining/scripts/common/sshd.sh",
        "../provisioining/scripts/debian/networking.sh",
        "../provisioining/scripts/debian/sudoers.sh",
        "../provisioining/scripts/common/vagrant.sh",
        "../provisioining/scripts/common/vmtools.sh",
        "../provisioining/scripts/debian/cleanup.sh",
        "../provisioining/scripts/common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "../base-boxes/boxes/{{user `distro`}}/{{.Provider}}.box"
      "keep_input_artifact": true
    }
  ]

}
